<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="8dp">

    <TextView android:id="@+id/column1" android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginEnd="4dp" android:text="Col 1"
        app:layout_constraintEnd_toStartOf="@+id/column2"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <TextView android:id="@+id/column2" android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginEnd="4dp" android:text="Col 2"
        app:layout_constraintEnd_toStartOf="@+id/column3"
        app:layout_constraintStart_toEndOf="@+id/column1" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <TextView android:id="@+id/column3" android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginEnd="4dp" android:text="Col 3"
        app:layout_constraintEnd_toStartOf="@+id/column4"
        app:layout_constraintStart_toEndOf="@+id/column2" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <TextView android:id="@+id/column4" android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginEnd="4dp" android:text="Col 4"
        app:layout_constraintEnd_toStartOf="@+id/column5"
        app:layout_constraintStart_toEndOf="@+id/column3" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <TextView android:id="@+id/column5" android:layout_width="0dp"
        android:layout_height="wrap_content" android:text="Col 5"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/column4"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_weight="1" />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView"
        android:layout_width="0dp" android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
